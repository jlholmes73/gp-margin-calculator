<?xml version="1.0" encoding="utf-8"?>
<TabHost  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
   android:layout_height="fill_parent">
       <LinearLayout
       android:orientation="vertical"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent">
       <TabWidget
           android:id="@android:id/tabs"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content" />
           <ScrollView android:id="@+id/ScrollView01"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
           <FrameLayout
                   android:id="@android:id/tabcontent"
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent">
                   <RelativeLayout 
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/calcTab1"
                            android:layout_width="fill_parent"
                                    android:layout_height="fill_parent">
                                    <TextView
                       android:id="@+id/label1Tab1"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:text="Step 1:Enter Cost Price(CP)"/>
                             <EditText
                       android:id="@+id/entry1Tab1"
                       android:layout_width="170dip"
                       android:layout_height="wrap_content"
                       android:background="@android:drawable/editbox_background"
                       android:singleLine="True"
                                android:maxLength="10"
                                android:hint="1.00"
                       android:numeric="decimal"
                       android:layout_below="@id/label1Tab1"/>
               <CheckBox 
                       android:id="@+id/checkbox1Tab1"
                       android:gravity="center"
                       android:layout_marginLeft="3dip"
                           android:layout_width="120dip"
                           android:layout_height="wrap_content"
                           android:text="CP includes tax/VAT/GST"
                           android:textSize="10sp"
                           android:layout_toRightOf="@id/entry1Tab1" />
                    <TextView
                       android:id="@+id/label2Tab1"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:text="Step 2:Enter Sale Price(SP)"
                       android:layout_below="@id/entry1Tab1"/>
                    <EditText
                       android:id="@+id/entry2Tab1"
                       android:layout_width="170dip"
                       android:layout_height="wrap_content"
                       android:background="@android:drawable/editbox_background"
                       android:singleLine="True"
                       android:maxLength="10"
                       android:hint="2.00"
                       android:numeric="decimal"
                       android:layout_below="@id/label2Tab1"/>
 
               <CheckBox 
                       android:id="@+id/checkbox2Tab1"
                       android:gravity="center"
                           android:layout_width="120dip"
                           android:layout_height="wrap_content"
                           android:layout_toRightOf="@id/entry1Tab1"
                           android:layout_marginTop="5dip"
                           android:layout_marginLeft="3dip"
                           android:text="SP includes tax/VAT/GST"
                           android:textSize="10sp"
                           android:layout_below="@id/checkbox1Tab1" />
                    <TextView
                       android:id="@+id/label3Tab1"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignRight="@id/checkbox2Tab1"
                       android:text="Step 3:Enter Tax/VAT/GST rate % if applicable"
                       android:layout_below="@id/checkbox2Tab1"/>
                    <EditText
                       android:id="@+id/entry3Tab1"
                       
                       android:layout_width="120dip"
                       android:layout_height="wrap_content"
                       android:background="@android:drawable/editbox_background"
                       android:singleLine="True"
                       android:editable="false"
                       android:layout_marginLeft="100dip"
                                android:maxLength="10"
                                android:hint="0.0"
                       android:numeric="decimal"
                       android:layout_below="@id/label3Tab1"/>
                    <Button
                       android:id="@+id/calcTab1Button"
                       android:layout_alignRight="@id/checkbox2Tab1"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/entry3Tab1"
                       android:layout_margin="8dip"
                       android:layout_alignParentLeft="true"
                       android:text="Step 4: Push to Calculate now!" />
                    <TextView
                       android:id="@+id/label4Tab1"
                       android:layout_alignRight="@id/checkbox2Tab1"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:text="%Gross Profit (%GP = (SP-CP) Ã— 100/SP):"
                       android:layout_below="@id/calcTab1Button"/>
                    <EditText
                       android:id="@+id/entry4Tab1"
                       android:layout_alignRight="@id/checkbox2Tab1"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:background="@android:drawable/editbox_background"
                       android:singleLine="True"
                       android:editable="false"
                       android:cursorVisible="false"
                       android:layout_below="@id/label4Tab1"/>
               <TextView
                       android:id="@+id/label5Tab1"
                       android:layout_alignRight="@id/checkbox2Tab1"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:text="%Margin (%M=((SP-CP)/CP)x100):"
                       android:layout_below="@id/entry4Tab1"/>
               <EditText
                       android:id="@+id/entry5Tab1"
                       android:layout_alignRight="@id/checkbox2Tab1"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:background="@android:drawable/editbox_background"
                       android:singleLine="True"
                       android:editable="false"
                       android:cursorVisible="false"
                       android:layout_below="@id/label5Tab1"/>
                <TextView
                       android:id="@+id/label6Tab1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Markup per unit(M=SP-CP):"
                       android:layout_below="@id/entry5Tab1"/>
               
                  <TextView
                       android:id="@+id/label7Tab1"
                       android:layout_alignRight="@id/checkbox2Tab1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Sales tax in SP:"
                       android:layout_marginLeft="10dip"
                       android:layout_below="@id/entry5Tab1"
                       android:layout_toRightOf="@id/label6Tab1"/>
                  <EditText
                       android:id="@+id/entry6Tab1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@android:drawable/editbox_background"
                       android:singleLine="True"
                       android:editable="false"
                       android:cursorVisible="false"
                       android:layout_below="@id/label7Tab1"
                       android:layout_alignLeft="@id/label6Tab1"
                       android:layout_alignRight="@id/label6Tab1"/>
                   <EditText
                       android:id="@+id/entry8Tab1"
                       
                       android:layout_alignRight="@id/entry5Tab1"
                       android:layout_alignLeft="@id/label7Tab1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dip"
                       android:background="@android:drawable/editbox_background"
                       android:singleLine="True"
                       android:editable="false"
                       android:cursorVisible="false"
                       android:gravity="right"
                       android:layout_below="@id/label7Tab1"
                       android:layout_toRightOf="@id/label6Tab1"/>
                   </RelativeLayout>
               <RelativeLayout 
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/calcTab2"
