<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff">
<TextView  
    android:layout_width="fill_parent" 
    android:id="@+id/Text1"
    android:layout_height="wrap_content" 
    android:textColor="#000000"
    android:layout_marginBottom="5dip"
    android:text="GP and Margin Calc Settings - Set a default Sales Tax/VAT/GST rate (0 to disable)" />
    
            	
    
<Button android:text="+" 
	android:id="@+id/Button03" 
	android:layout_below="@id/Text1"
	android:layout_marginLeft="80dip"
	android:layout_width="30dip"
	android:layout_height="wrap_content"></Button>
    <EditText
        android:id="@+id/entry1"
        android:layout_width="30dip"
        android:layout_height="45dip"
        android:layout_marginLeft="80dip"
        android:maxLength="1"
        android:hint="0"
        android:numeric="decimal"
        android:background="@android:drawable/editbox_background"
        android:singleLine="True"
        android:inputType="number"
        android:layout_below="@id/Button03"/>
<Button android:text="-" 
	android:id="@+id/Button04" 
	android:layout_below="@id/entry1"
	android:layout_marginLeft="80dip"
	android:layout_width="30dip"
	android:layout_height="wrap_content"></Button>
<Button android:text="+" 
	android:id="@+id/Button05" 
	android:layout_below="@id/Text1"
	android:layout_width="30dip"
	android:layout_toRightOf="@id/Button03"
	android:layout_height="wrap_content"></Button>
    <EditText
        android:id="@+id/entry2"
        android:layout_width="30dip"
        android:layout_height="45dip"
        android:maxLength="1"
        android:hint="0"
        android:numeric="decimal"
        android:background="@android:drawable/editbox_background"
        android:singleLine="True"
        android:inputType="number"
        android:layout_toRightOf="@id/Button03"
        android:layout_below="@id/Button03"/>
<Button android:text="-" 
	android:id="@+id/Button06" 
	android:layout_below="@id/entry1"
	android:layout_width="30dip"
	android:layout_toRightOf="@id/Button03"
	android:layout_height="wrap_content"></Button>
	
        	<TextView
        		android:id="@+id/ORTab2"
        		android:layout_width="20dip"
        		android:layout_height="wrap_content"
        		android:text="."
        		android:textSize="60px"
        		android:textColor="#000000"
        		android:layout_toRightOf="@id/Button05"
        		android:layout_marginLeft="5dip"
        		android:layout_marginTop="20dip"
        		android:layout_below="@id/Text1"/>
        		
<Button android:text="+" 
	android:id="@+id/Button07" 
	android:layout_below="@id/Text1"
	android:layout_width="30dip"
	android:layout_toRightOf="@id/ORTab2"
	android:layout_height="wrap_content"></Button>
    <EditText
        android:id="@+id/entry3"
        android:layout_width="30dip"
        android:layout_height="45dip"
        android:maxLength="1"
        android:hint="0"
        android:numeric="decimal"
        android:background="@android:drawable/editbox_background"
        android:singleLine="True"
        android:inputType="number"
        android:layout_toRightOf="@id/ORTab2"
        android:layout_below="@id/Button03"/>
<Button android:text="-" 
	android:id="@+id/Button08" 
	android:layout_below="@id/entry1"
	android:layout_width="30dip"
	android:layout_toRightOf="@id/ORTab2"
	android:layout_marginBottom="20dip"
	android:layout_height="wrap_content"></Button>
<Button android:text="+" 
	android:id="@+id/Button09" 
	android:layout_below="@id/Text1"
	android:layout_width="30dip"
	android:layout_toRightOf="@id/Button08"
	android:layout_height="wrap_content"></Button>
    <EditText
        android:id="@+id/entry4"
        android:layout_width="30dip"
        android:layout_height="45dip"
        android:maxLength="1"
        android:hint="0"
        android:numeric="decimal"
        android:background="@android:drawable/editbox_background"
        android:singleLine="True"
        android:inputType="number"
        android:layout_toRightOf="@id/Button08"
        android:layout_below="@id/Button03"/>
<Button android:text="-" 
	android:id="@+id/Button10" 
	android:layout_below="@id/entry1"
	android:layout_width="30dip"
	android:layout_toRightOf="@id/Button08"
	android:layout_marginBottom="20dip"
	android:layout_height="wrap_content"></Button>
	
        	<TextView
        		android:id="@+id/ORTab"
        		android:layout_width="30dip"
        		android:layout_height="wrap_content"
        		android:text="%"
        		android:textSize="30px"
        		android:textColor="#000000"
        		android:layout_toRightOf="@id/Button10"
        		android:layout_marginLeft="10dip"
        		android:layout_marginTop="50dip"
        		android:layout_below="@id/Text1"/>
	
	
<Button android:text="Save tax rate and activate"
	android:id="@+id/Button02" 
	android:layout_below="@id/Button08"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"></Button>
<Button android:layout_height="wrap_content" 
	android:layout_below="@+id/Button02" 
	android:text="Cancel and return to GP Calc"  
	android:layout_width="fill_parent" 
	android:id="@+id/Button01"></Button>
</RelativeLayout>
