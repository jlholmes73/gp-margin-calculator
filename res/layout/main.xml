                       android:layout_width="30dip"
                       android:layout_height="wrap_content"
                       android:text="OR"
                       android:layout_toRightOf="@id/entry2Tab2"
                       android:layout_marginLeft="3dip"
                       android:layout_marginTop="8dip"
                       android:textSize="20sp"
                       android:layout_below="@id/checkbox1Tab2"/>
               <TextView
                       android:id="@+id/label2aTab2"
                       android:layout_width="150dip"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="3dip"
                       android:text="Step 2:Enter required %Margin(%M)"
                       android:layout_marginLeft="2dip"
                       android:layout_toRightOf="@id/ORTab2"
                       android:layout_below="@id/checkbox1Tab2"/>
                    <EditText
                       android:id="@+id/entry2aTab2"
                       android:layout_width="140dip"
                       android:layout_height="wrap_content"
                       android:background="@android:drawable/editbox_background"
                       android:singleLine="True"
                                android:maxLength="10"
                                android:hint="0.0"
                       android:layout_alignRight="@id/label2aTab2"
                       android:numeric="decimal"
                       android:layout_below="@id/label2aTab2"
                       android:layout_toRightOf="@id/ORTab2"/>
 
                    <TextView
                       android:id="@+id/label4Tab2"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignRight="@id/entry2aTab2"
                       android:textSize="10sp"
                       android:text="CP=SP-(SPx%GP/100)"
                       android:layout_below="@id/entry2Tab2"/>
               <TextView
                       android:id="@+id/label4aTab2"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:textSize="10sp"
                       android:text="CP=SPx100/(100+%M)"
                       android:layout_toRightOf="@id/ORTab2"
                       android:layout_alignRight="@id/entry2aTab2"
                       android:layout_below="@id/entry2aTab2"/>
                    <Button
                       android:id="@+id/calcTab2Button"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/label4aTab2"
                       android:layout_margin="5dip"
                       android:layout_alignParentLeft="true"
                       android:layout_alignRight="@id/label4aTab2"
                       android:text="Step 3: Press to Calculate Cost Price now!" />
 
               <TextView
                       android:id="@+id/label5Tab2"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignRight="@id/calcTab2Button"
                       android:text="Cost Price(CP) - excluding tax/VAT/GST:"
                       android:layout_below="@id/calcTab2Button"/>
 
                    <EditText
                       android:id="@+id/entry4Tab2"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignRight="@id/calcTab2Button"
                       android:background="@android:drawable/editbox_background"
                       android:singleLine="True"
                       android:editable="false"
                       android:cursorVisible="false"
                       android:layout_below="@id/label5Tab2"/>
               <TextView
                       android:id="@+id/label7Tab2"
                       android:layout_alignRight="@id/calcTab2Button"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:text="Sales tax/VAT/GST included in Selling Price:"
                       android:layout_below="@id/entry4Tab2"/>
 
                    <EditText
                       android:id="@+id/entry6Tab2"
                       android:layout_alignRight="@id/calcTab2Button"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:background="@android:drawable/editbox_background"
                       android:singleLine="True"
                       android:editable="false"
                       android:cursorVisible="false"
                       android:layout_below="@id/label7Tab2"/>        
                       
               <TextView
                       android:id="@+id/label6Tab2"
                       android:layout_alignRight="@id/calcTab2Button"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:text="Actual Markup/Profit per unit(M=SP-CP):"
                       android:layout_below="@id/entry6Tab2"/>
 
                    <EditText
                       android:id="@+id/entry5Tab2"
                       android:layout_alignRight="@id/calcTab2Button"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:background="@android:drawable/editbox_background"
                       android:singleLine="True"
                       android:editable="false"
                       android:cursorVisible="false"
                       android:layout_below="@id/label6Tab2"/>
                </RelativeLayout>
